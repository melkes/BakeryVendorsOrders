<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Orders</title>
    <link 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" 
      rel="stylesheet" 
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" 
      crossorigin="anonymous">
  </head>
  <body>
    @using BakeryVendorsOrders.Models;
    <div class="container mt-4">
      <table class="table" style="max-width:40%">
      <tr>
        <td>Vendor:</td>
        <td><b>@Model["vendor"].Name</b></td>
      </tr>
      <tr>
        <td>Vendor Description</td>
        <td>@Model["vendor"].Description</td>
      </tr>
      </table>

      <h3>Here are all the orders from this vendor:</h3>
      <ol>
      @foreach (Order order in @Model["orders"])
      {
        <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Title</a></li>
      }
      </ol>
      <p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new order</a></p>
      <p><a href='/vendors'>Return to vendors list</a></p>
      <p><a href='/'>Return to Main Page</a></p>
    </div>
  </body>
</html>
